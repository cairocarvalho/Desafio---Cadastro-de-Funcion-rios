@using FuncionarioMod.Models
@model FuncionarioModel

@{
    ViewData["Title"] = "Confirmação de Apagar o Funcionário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome) ?</h3>

</div>

<a class="btn btn-primary" role="button" asp-controller="Funcionario" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Funcionario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar Exclusão</a>