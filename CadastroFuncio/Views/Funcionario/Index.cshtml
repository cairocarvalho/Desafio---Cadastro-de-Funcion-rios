@using FuncionarioMod.Models
@model List<FuncionarioModel>
@{
    ViewData["Title"] = "Listagem de Funcionários";
}

<div class="text-center">

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" role="button" asp-controller="Funcionario" asp-action="Criar"> Adicionar Novo Funcionário</a>
</div>

<br />

<h1 class="display-4">Listagem de Funcionários</h1>

<table class="table" id="table-funcionarios">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">CPF</th>
      <th scope="col">PIS</th>
      <th scope="col">Sexo</th>
      <th scope="col">Salário</th>
      <th scope="col">E-mail</th>
      <th scope="col">Data de Admissão</th>
       <th scope="col"></th>
     
    </tr>
  </thead>
  <tbody>
   @if(Model != null && Model.Any())
            {
                foreach (FuncionarioModel funcionario in Model)
                {
                     <tr>
      <th scope="row">@funcionario.Id</th>
      <td>@funcionario.Nome</td>
      <td>@funcionario.CPF</td>
      <td>@funcionario.PIS</td>
      <td>@funcionario.Sexo</td>
      <td>@funcionario.Salario</td>
      <td>@funcionario.email</td> 
      <td>@funcionario.data</td>
      <td>
          <div class="btn-group" role="group">
             <a role="button" class="btn btn-primary"asp-route-id="@funcionario.Id" asp-controller="Funcionario" asp-action="Editar">Editar</a>
             <a role="button" class="btn btn-danger"asp-route-id="@funcionario.Id" asp-controller="Funcionario" asp-action="ApagarConfirmacao">Apagar</a>
          </div>

      </td>
    </tr>
                }
            }

  </tbody>
</table>
</div>

   